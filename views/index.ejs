<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Todo App</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    @media (max-width: 576px) {
      h1.display-2 {
        font-size: 2.5rem; /* smaller heading on small screens */
      }
      
      form.mb-4.d-flex {
        flex-direction: column;
      }
      
      form.mb-4.d-flex input {
        margin-bottom: 0.5rem;
        width: 100%;
      }
      
      form.mb-4.d-flex button {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="container py-4">

    <h1 class="display-2 fw-bold mb-4 text-center">Todo List</h1>

    <!-- Form to add new todo -->
    <form
      action="/todos"
      method="POST"
      class="mb-4 d-flex justify-content-center"
      role="search"
      aria-label="Add new todo"
      style="max-width: 1000px; margin-left: auto; margin-right: auto;"
    >
      <input
        type="text"
        name="text"
        class="form-control me-2"
        placeholder="Enter new todo"
        required
        autocomplete="off"
        aria-required="true"
        aria-label="New todo text"
        maxlength="35"
        style="border-color: #333; box-shadow: none; width: 100%;"
        onfocus="this.style.borderColor='#111'; this.style.boxShadow='0 0 0 0.25rem rgba(0, 0, 0, 0.25)';"
        onblur="this.style.borderColor='#333'; this.style.boxShadow='none';"
      />
      <button class="btn btn-primary" type="submit" aria-label="Add todo">Add</button>
    </form>

    <!-- List of todos -->
    <ul
      class="list-group mx-auto"
      style="border: 1px solid #333; border-radius: 0.375rem; box-shadow: none; max-width: 1000px;"
    >
      <% if (todos.length === 0) { %>
        <li class="list-group-item text-center text-muted">No todos yet!</li>
      <% } %>

      <% todos.forEach(todo => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span
            class="<%= todo.completed ? 'text-decoration-line-through text-muted' : '' %>"
            aria-live="polite"
            aria-atomic="true"
            style="text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);"
          >
            <%= todo.text %>
          </span>

          <div class="btn-group btn-group-sm" role="group" aria-label="Todo actions">
            <% if (!todo.completed) { %>
              <form
                action="/todos/<%= todo.id %>/complete?_method=PUT"
                method="POST"
                class="d-inline me-2"
              >
                <button
                  class="btn btn-success"
                  type="submit"
                  title="Mark complete"
                  aria-label="Mark todo as complete"
                  style="font-weight: bold;"
                >
                  ✓
                </button>
              </form>
            <% } %>

            <form
              action="/todos/<%= todo.id %>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button
                class="btn btn-danger"
                type="submit"
                title="Delete"
                aria-label="Delete todo"
                style="font-weight: bold;"
              >
                ✗
              </button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
