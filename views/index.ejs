<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Todo App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    @media (max-width: 576px) {
      h1.display-2 {
        font-size: 2.5rem;
      }
      form.mb-4.d-flex {
        flex-direction: column;
      }
      form.mb-4.d-flex input {
        margin-bottom: 0.5rem;
        width: 100%;
      }
      form.mb-4.d-flex button {
        width: 100%;
      }
    }
    h1.display-2 {
      margin-top: 80px; /* Adjust this value to move the title further down */
    }

    /* Dark mode overrides */
    body.dark-mode {
      background-color: #121212;
      color: #e0e0e0;
    }

    body.dark-mode h1.display-2 {
      color: #aaa; /* pure white */
      /* or a softer white like #eee if you want it less harsh */
}

    body.dark-mode .container {
      background-color: #121212;
      border-color: #444;
    }

    body.dark-mode .list-group {
      border-color: #444;
    }

    body.dark-mode .list-group-item {
      background-color: #2c2c2c;
      color: white; /* Make todos text white */
      border-color: #444;
    }

    /* Specifically target the "No todos yet!" text to be white in dark mode */
    body.dark-mode .list-group-item .text-decoration-line-through.text-muted {
      color: white !important;
    }  

    body.dark-mode .btn-primary {
      background-color: #3a7bd5;
      border-color: #3a7bd5;
    }

    body.dark-mode .btn-warning {
      /* Remove original warning style in dark mode */
      background-color: transparent;
      border-color: transparent;
      color: inherit;
    }

    body.dark-mode .btn-secondary {
      background-color: #555;
      border-color: #555;
      color: #eee;
    }

    /* Container styling */
    .container.position-relative {
      position: relative;
      max-width: 1000px;
      margin: 0 auto;
      padding-top: 40px; /* Padding above all container content */
    }

    /* Dark Mode Toggle */
    #darkModeToggle {
      position: absolute;
      top: 20px;    /* Space from top */
      left: 15px;
      font-weight: bold;
      font-size: 1rem; /* Match Bootstrap default button font size */
      padding: 0.375rem 0.75rem;
    }

    /* Logout button positioning */
    #logoutForm {
      position: absolute;
      top: 20px;    /* Same space from top */
      right: 0;
      padding-right: 12px;
    }

    /* Match input background to todo list background */
    input[name="text"] {
      background-color: white;
      border-color: #333;
      color: #000;
    }

    body.dark-mode input[name="text"] {
      background-color: #2c2c2c;
      border-color: #444;
      color: white; /* typed text */
    }

    /* Placeholder text color in dark mode */
    body.dark-mode input[name="text"]::placeholder {
      color: #ddd;
      opacity: 1; /* ensure full opacity */
    }

    /* ** NEW: Make Logout button same style as Dark mode button in dark mode ** */
    body.dark-mode #logoutForm button {
      background-color: #555;
      border-color: #555;
      color: #eee;
    }
  </style>
</head>
<body>
  <div class="container py-4 position-relative">

    <!-- Dark Mode Toggle Button aligned left -->
    <button id="darkModeToggle" class="btn btn-secondary btn-sm">Dark mode</button>

    <!-- Header and Logout Button aligned right -->
    <form id="logoutForm" action="/logout" method="POST">
      <button type="submit" class="btn btn-warning text-white fw-bold">Logout</button>
    </form>

    <!-- Todo List Title -->
    <div class="text-center mb-4">
      <h1 class="display-2 fw-bold">Todo List</h1>
    </div>

    <!-- Todo Form -->
    <form action="/todos" method="POST" class="mb-4 d-flex justify-content-center" style="max-width: 1000px; margin-left: auto; margin-right: auto;">
      <input type="text" name="text" class="form-control me-2" placeholder="Enter new todo" required maxlength="35" />
      <button class="btn btn-primary fw-bold" type="submit">Add</button>
    </form>

    <!-- Todo List -->
    <ul class="list-group mx-auto" style="border: 1px solid #333; border-radius: 0.375rem; max-width: 1000px;">
      <% if (todos.length === 0) { %>
        <li class="list-group-item text-center text-muted">No todos yet!</li>
      <% } %>
      <% todos.forEach(todo => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="<%= todo.completed ? 'text-decoration-line-through text-muted' : '' %>">
            <%= todo.text %>
          </span>
          <div class="btn-group btn-group-sm" role="group">
            <% if (!todo.completed) { %>
              <form action="/todos/<%= todo.id %>/complete?_method=PUT" method="POST" class="d-inline me-2">
                <button class="btn btn-success" type="submit" title="Mark complete">✓</button>
              </form>
            <% } %>
            <form action="/todos/<%= todo.id %>?_method=DELETE" method="POST" class="d-inline delete-form">
              <button class="btn btn-danger" type="submit" title="Delete">✗</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- Bootstrap Modal -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Do you want to delete this task?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-footer justify-content-center">
          <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
          <button id="confirmDeleteBtn" type="button" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS & Custom Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let formToSubmit = null;

    document.addEventListener("DOMContentLoaded", function () {
      // Delete confirmation modal
      const deleteForms = document.querySelectorAll(".delete-form");
      deleteForms.forEach(function (form) {
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          formToSubmit = form;
          const modal = new bootstrap.Modal(document.getElementById("confirmDeleteModal"));
          modal.show();
        });
      });

      document.getElementById("confirmDeleteBtn").addEventListener("click", function () {
        if (formToSubmit) formToSubmit.submit();
      });

      // Dark mode toggle
      const toggleBtn = document.getElementById("darkModeToggle");

      // On page load, check localStorage and set mode and button text
      if (localStorage.getItem("darkMode") === "enabled") {
        document.body.classList.add("dark-mode");
        toggleBtn.textContent = "Light mode";
      } else {
        toggleBtn.textContent = "Dark mode";
      }

      toggleBtn.addEventListener("click", () => {
        document.body.classList.toggle("dark-mode");
        if (document.body.classList.contains("dark-mode")) {
          localStorage.setItem("darkMode", "enabled");
          toggleBtn.textContent = "Light mode";
        } else {
          localStorage.setItem("darkMode", "disabled");
          toggleBtn.textContent = "Dark mode";
        }
      });
    });
  </script>
</body>
</html>
